<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFotoCurso"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        
        <TextView
            android:id="@+id/tvTitulo"
            android:textSize="24sp"
            android:layout_below="@id/ivFotoCurso"
            android:paddingLeft="16dp"
            android:text="TESTE DO TITULO"
            android:paddingTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSubTitulo"
            android:text="TESTE DO SUBTITULO"
            android:layout_below="@id/tvTitulo"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAutor"
            android:textSize="10sp"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:layout_below="@id/tvSubTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSaiba"
            android:layout_below="@id/tvAutor"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="16dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAIBA MAIS"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
